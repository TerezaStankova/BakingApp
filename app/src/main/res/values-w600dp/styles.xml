<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myPinkTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="myPinkTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="myPlainBlackTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/TextOnLight</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="myWhiteTitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/TextOnDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="myWhiteIngredientsTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/TextOnDark</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>